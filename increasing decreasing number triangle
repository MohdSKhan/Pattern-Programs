#include<iostream>
using namespace std;
int main()
{
    int i,j,x,k=-1,n;
    cin>>n;
    for(i=1;i<=n;i++){
            x=i;k++;
        for(j=1;j<=2*n-1;j++){

             if(j<=i+k)
                {
                    cout<<x;
                    j<i? x++ : x--;

                }
            else
                    cout<<"  ";
        }



    cout<<endl;
    }
}
