
#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define ulli unsigned long long int
#define MOD 1000000007

int main()
{
        
                int n;
                cin>>n;
                
                for(int row=1;row<=n;row++){
                    //stars
                    for(int col=1;col<=row;col++){
                        cout<<"*";
                    }
                    cout<<endl;

                }

                for(int row=n-1;row>=1;row--){
                    //stars
                    for(int col=1;col<=row;col++){
                        cout<<"*";
                    }
                    cout<<endl;
                }

}



