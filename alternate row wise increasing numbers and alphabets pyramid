
#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define ulli unsigned long long int
#define MOD 1000000007
int main()
{
            
                int n;
                cin>>n;
                for(int row=1;row<=n;row++){
                    //spaces
                    for(int sp=1;sp<=n-row;sp++){
                        cout<<" ";
                    }

                    char ch='A';
                    for(int col=1;col<=row;col++){
                            if(row&1){
                                cout<<col<<" ";
                            }
                            else{
                                cout<<ch<<" ";
                                ch++;
                            }
                    }
                  
                    cout<<endl;
                }


