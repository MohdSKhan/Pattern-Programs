
#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define ulli unsigned long long int
#define MOD 1000000007
int main()
{
            
                int n;
                cin>>n;

                for(int row=1;row<=n;row++){
                    //spaces
                    for(int sp=1;sp<=n-row;sp++){
                        cout<<" ";
                    }

                    //dec num
                    int k=row;
                    for(int col=1;col<=row;col++){
                        cout<<k;
                        k--;
                    }
                    
                    //inc num
                    k=2;
                    for(int col=1;col<=row-1;col++){
                        cout<<k;
                        k++;
                    }

                    cout<<endl;
                }
                
}



