
#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define ulli unsigned long long int
#define MOD 1000000007
int main()
{
            
                int n;
                cin>>n;
                int cnt=1;
                for(int row=1;row<=n;row++){
                    //spaces
                    for(int sp=1;sp<=n-row;sp++){
                        cout<<" ";
                    }

                    //dec alphabets
                    int k= cnt+row-1;
                    char ch= k+'A'-1;
                    for(int col=1;col<=row;col++){
                        
                        cout<<ch;  cnt++; ch--;
                    }

                    cout<<endl;
                }
                
}



